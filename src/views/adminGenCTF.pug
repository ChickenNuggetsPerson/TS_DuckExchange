extends layout

block layout-content

  html
    head
      script(src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/6.0.0/bootbox.min.js" integrity="sha512-oVbWSv2O4y1UzvExJMHaHcaib4wsBMS5tEP3/YkMP6GmkwRJAa79Jwsv+Y/w7w2Vb/98/Xhvck10LyJweB8Jsw==" crossorigin="anonymous" referrerpolicy="no-referrer")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/notify.js" integrity="sha512-uE2UhqPZkcKyOjeXjPCmYsW9Sudy5Vbv0XwAVnKBamQeasAVAmH6HR9j5Qpy6Itk1cxk+ypFRPeAZwNnEwNuzQ==" crossorigin="anonymous" referrerpolicy="no-referrer")
    body()

      div( class="swipe-container")
        div(id="outerBorder" class="text-center center" style="background-color: var(--firstColor); width:80%; border-radius:60px;")
          div(id="innerBoarder" class="center" style="background-color: var(--secondColor); width: 100%; border-radius: 45px;")

            h1(style="font-family: Modak; color: #6a7c99; letter-spacing: 6;") Admin View
          
            br

            ul(class="nav nav-pills justify-content-center")
              li(class="nav-item")
                a(class="nav-link" onclick="changePage('/admin/view/users')" style="color:white;") Users
              li(class="nav-item")
                a(class="nav-link" onclick="changePage('/admin/view/categories')" style="color:white;") Categories
              li(class="nav-item")
                a(class="nav-link active" onclick="changePage('/admin/view/genCTF')" style="color:white;") Gen CTF

            br

            div(class="container text-center")
              div(class="row")
                div(class="col")

                  div(class="container text-center")
                    div(id="ctfContainer")


                div(class="col")
                  h1(style="color: #6a7c99; letter-spacing: 6;") Manual CTFs
                  br

                  div(class="input-group mb-3" data-bs-theme="dark")
                    
                    div(class="input-group-prepend")
                        span(class="input-group-text" id="basic-addon3") SHS_CTF{

                    input(class="form-control" name="ctf" aria-describedby="basic-addon3" id="ctfInput")

                    div(class="input-group-prepend")
                        span(class="input-group-text" id="basic-addon3") }

                  div(class="input-group mb-3" data-bs-theme="dark")
                    div(class="input-group-prepend")
                        span(class="input-group-text" id="basic-addon3") Value: 
                    input(class="form-control" name="ctf" aria-describedby="basic-addon3" id="ctfValue" type="number" value="100")

                  button(type="button", class="btn btn-success" style="position:relative; bottom:0;" onclick="submitCTF()") Submit

                  br
                  br

                  div(class="container text-center")
                    div(id="manualCTFContainer")


      script.
        var ctfs = !{ctfs};
        var manualCTFs = !{manualCTFs};

        adjustDivSize()

      script(src="/static/adminLib.js")
      script(src="/static/adminGenCTF.js")
